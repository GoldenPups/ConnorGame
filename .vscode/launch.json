// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "WSL: Debug hello",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/hello",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build hello"
      }
    ]
  }
  