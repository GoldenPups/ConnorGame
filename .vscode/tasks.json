{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-Isrc",
        "-Iinc",
        "src/main.cpp",
        "src/renderer.cpp",
        "src/physics.cpp",
        "-o",
        "game",
        "`sdl2-config",
        "--cflags",
        "--libs`"
      ],
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}